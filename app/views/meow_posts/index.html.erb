<p id="notice"><%= notice %></p>

<h1>Meow Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meow_posts.each do |meow_post| %>
      <tr>
        <td><%= meow_post.content %></td>
        <td><%= meow_post.user %></td>
        <td><%= link_to 'Show', meow_post %></td>
        <td><%= link_to 'Edit', edit_meow_post_path(meow_post) %></td>
        <td><%= link_to 'Destroy', meow_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meow Post', new_meow_post_path %>
